<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topic_5">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/layout_bkg_5"
            android:padding="10dp"
            android:contentDescription="@string/back"
            android:src="@drawable/back"
            android:elevation="10dp"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/textview_chart3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="廣告清單"
            android:textSize="18sp"
            android:layout_below="@id/button1"
            android:background="@drawable/layout_bkg_3"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:elevation="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:background="@drawable/layout_bkg_8"
        android:divider="@color/topic_2"
        android:dividerHeight="1dp"
        android:layout_margin="20dp" />

</RelativeLayout>